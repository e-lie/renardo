{
    "name": "webclient",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "main": "electron/main.js",
    "scripts": {
        "dev": "vite",
        "dev:electron": "npm run build && electron .",
        "build": "vite build",
        "build:electron": "vite build && electron-builder",
        "dist": "vite build && electron-builder --publish=never",
        "preview": "vite preview"
    },
    "devDependencies": {
        "@sveltejs/vite-plugin-svelte": "^2.4.2",
        "@tsconfig/svelte": "^5.0.5",
        "@types/node": "^24.3.1",
        "concurrently": "^8.0.0",
        "daisyui": "^5.0.35",
        "electron": "^28.0.0",
        "electron-builder": "^24.0.0",
        "svelte-check": "^4.3.1",
        "tailwindcss": "^4.1.6",
        "tslib": "^2.8.1",
        "typescript": "^5.9.2",
        "vite": "^4.4.5",
        "wait-on": "^7.0.0"
    },
    "dependencies": {
        "@codemirror/basic-setup": "^0.20.0",
        "@codemirror/lang-python": "^6.2.0",
        "@codemirror/theme-one-dark": "^6.1.2",
        "@tailwindcss/postcss": "^4.1.6",
        "codemirror": "^6.0.1",
        "svelte": "^4.0.5",
        "svelte-codemirror-editor": "^1.4.1"
    },
    "build": {
        "appId": "com.renardo.app",
        "productName": "Renardo",
        "directories": {
            "output": "dist-electron"
        },
        "files": [
            "dist/**/*",
            "electron/**/*",
            "!python/**/*"
        ],
        "extraResources": [
            {
                "from": "python",
                "to": "python",
                "filter": ["**/*"]
            },
            {
                "from": "../src/renardo",
                "to": "renardo",
                "filter": ["**/*.py", "**/*.json", "**/*.yaml"]
            }
        ],
        "mac": {
            "category": "public.app-category.music"
        },
        "linux": {
            "target": ["AppImage", "deb"],
            "category": "Audio"
        },
        "win": {
            "target": "nsis"
        }
    }
}
