{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Ensure uv sync",
            "type": "shell",
            "command": "uv",
            "args": ["sync"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "uv run renardo",
            "type": "shell",
            "command": "uv",
            "args": ["run", "renardo"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "uv run renardo --pipe",
            "type": "shell",
            "command": "uv",
            "args": ["run", "renardo", "--pipe"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "uv run cli --pipe",
            "type": "shell",
            "command": "uv",
            "args": ["run", "cli", "--pipe"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "uv run tests",
            "type": "shell",
            "command": "uv",
            "args": ["run", "pytest", "tests/", "-v"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "message": 4
                        }
                    ]
                }
            ]
        },
        {
            "label": "uv sync --dev",
            "type": "shell",
            "command": "uv",
            "args": ["sync", "--dev"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "uv add package",
            "type": "shell",
            "command": "uv",
            "args": ["add", "${input:packageName}"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Check indentation errors",
            "type": "shell",
            "command": "python",
            "args": ["-m", "py_compile", "${file}"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/src"
                }
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": "^\\s*File\\s+\"(.*)\"\\,\\s+line\\s+(\\d+)",
                            "file": 1,
                            "line": 2
                        },
                        {
                            "regexp": "^\\s*(.*)$",
                            "message": 1
                        }
                    ]
                }
            ]
        }
    ],
    "inputs": [
        {
            "id": "packageName",
            "description": "Package name to add",
            "default": "",
            "type": "promptString"
        }
    ]
}